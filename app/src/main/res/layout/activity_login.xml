<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

 <ImageView
     android:layout_width="273px"
     android:layout_height="256px"
     android:layout_marginTop="270px"
     android:layout_gravity="center_horizontal"
     android:layout_marginBottom="270px"
     android:src="@mipmap/loginlogo"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/icon_accountnumber" />

        <EditText
            android:id="@+id/et_account"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入账号"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#b6b6b6"
            android:textSize="14sp" />




    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d8d8d8" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/icon_password" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#b6b6b6"
            android:textSize="14sp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d8d8d8" />

    <TextView
        android:id="@+id/tv_login_btn"
        android:layout_width="fill_parent"
        android:layout_height="132px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_deng_selector"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="50px" />




</LinearLayout>
